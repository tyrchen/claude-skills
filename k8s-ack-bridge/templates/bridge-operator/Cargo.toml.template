# Bridge Operator Cargo.toml Template
# Replace {{OPERATOR_NAME}} with your operator name (e.g., ack-bridge)

[package]
name = "{{OPERATOR_NAME}}"
version = "0.1.0"
edition = "2024"
rust-version = "1.83"

[dependencies]
# Kubernetes
kube = { version = "0.98", features = ["runtime", "derive", "client"] }
k8s-openapi = { version = "0.24", features = ["v1_32"] }

# AWS SDK
aws-config = { version = "1.5", features = ["behavior-version-latest"] }
aws-sdk-route53 = "1.60"
aws-sdk-acm = "1.55"
aws-sdk-apigatewayv2 = "1.57"
aws-sdk-lambda = "1.67"

# Async
tokio = { version = "1.42", features = ["rt-multi-thread", "macros", "signal"] }
futures = "0.3"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Error handling
thiserror = "2.0"
anyhow = "1.0"

# Observability
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter", "json"] }

# Schema
schemars = "0.8"
chrono = { version = "0.4", features = ["serde"] }

[dev-dependencies]
rstest = "0.23"
mockall = "0.13"

[profile.release]
lto = true
codegen-units = 1
strip = true
